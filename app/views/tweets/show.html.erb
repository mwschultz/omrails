<div class="container">
  <div class="row">
    <div class="offdet-md-2 col-md-8">
      <div class="card">
        <div class="card-block">
        <h4 class="card-title"><%= link_to @tweet.user.username, user_path(@tweet.user.username) %></h4>
        <% if @tweet.image? %>
         <center><%= image_tag @tweet.image, class:"img-fluid" %></center>
         <% end %> 
          <p class="card-text"><%= @tweet.content %></p>
          <% if @tweet.user == current_user %>
            <%= link_to 'Edit', edit_tweet_path(@tweet) %>
            <%= link_to 'Destroy',@tweet,method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <%= link_to 'Back', tweets_path %>
        </div>
      </div>
    </div>
  </div>
</div>
